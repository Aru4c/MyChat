<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_orange_light"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hp.mychat.ProfileActivity">

    <ImageView
        android:id="@+id/profile_visit_user_image"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:src="@drawable/default_profile"/>

    <TextView
        android:text="Display UserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/profile_visit_username"
        android:textSize="24sp"
        android:textColor="@android:color/holo_red_dark"
        android:gravity="center"
        android:textStyle="normal|bold"
        android:layout_below="@+id/profile_visit_user_image"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Display UserStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/profile_visit_userstatus"
        android:textSize="20sp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_below="@+id/profile_visit_username"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp" />

    <Button
        android:text="Decline Friend Request"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:id="@+id/profile_decline_req_btn"
        android:background="@android:color/holo_red_dark"
        android:textColor="@android:color/background_light"
        android:textSize="16sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp" />

    <Button
        android:text="Send Friend Request"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:id="@+id/profile_visit_send_req_btn"
        android:background="@android:color/holo_red_dark"
        android:textColor="@android:color/background_light"
        android:textSize="16sp"
        android:layout_alignBottom="@+id/profile_decline_req_btn"
        android:layout_alignStart="@+id/profile_decline_req_btn"
        android:layout_marginBottom="55dp" />

</RelativeLayout>
