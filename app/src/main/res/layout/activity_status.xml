<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_status"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hp.mychat.StatusActivity"
    android:padding="0dp">

    <include layout="@layout/app_bar_layout"
        android:id="@+id/status_app_bar">

    </include>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/status_input"
        android:layout_marginTop="77dp"
        android:padding="30dp"
        android:hint="Change status here . . ."
        android:layout_below="@+id/status_app_bar"
        android:layout_alignParentStart="true"
        android:background="@android:color/background_light" />

    <Button
        android:text="UPDATE sTATUS"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@android:color/holo_red_dark"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        android:id="@+id/save_status_change_button"
        android:layout_below="@+id/status_input"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
