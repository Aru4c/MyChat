<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hp.mychat.SettingsActivity">

    <Button
        android:text="Change Image"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/settings_change_profile_image_button"
        android:background="?attr/colorAccent"
        android:textSize="18sp"
        android:layout_marginBottom="15dp"
        android:layout_above="@+id/settings_change_status_button"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Change Status"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/settings_change_status_button"
        android:background="@android:color/holo_red_dark"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/settings_change_profile_image_button" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:src="@drawable/default_profile"
        android:layout_height="220dp"
        android:layout_width="220dp"
        android:id="@+id/settings_profile_image"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/settings_username"
        android:textSize="24sp"
        android:textColor="@android:color/background_dark"
        android:layout_below="@+id/settings_profile_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp" />

    <TextView
        android:text="User Profile Status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/settings_user_status"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/settings_username"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
